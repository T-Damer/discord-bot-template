{
  "name": "discord-bot-template",
  "version": "1.0.0",
  "description": "Discord bot template, built with discord.js and typescirpt",
  "main": "index.js",
  "scripts": {
    "start": "yarn build && node build/index.js",
    "dev": "yarn build && concurrently \"tsc -w\" \"nodemon build/index.js\"",
    "build": "tsc && yarn deploy:commands",
    "deploy:commands": "node build/deployCommands.js",
    "pretty": "prettier --check src",
    "lint": "yarn pretty && eslint --ext ts,tsx,json src"
  },
  "keywords": [
    "discord-bot",
    "discord",
    "discord.js",
    "typescript",
    "template"
  ],
  "author": "T-DaMER",
  "license": "MIT",
  "engines": {
    "node": ">=16.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@types/express": "4.17.13",
    "concurrently": "6.5.1",
    "nodemon": "2.0.15",
    "typescript": "4.5.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "@discordjs/rest": "^0.2.0-canary.0",
    "discord.js": "13.4.0",
    "dotenv": "10.0.0",
    "express": "4.17.2"
  }
}
